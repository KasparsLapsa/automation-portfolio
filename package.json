{
    "scripts": {
        "test": "playwright test --grep-invert @destructive",
        "test:ae:setup": "playwright test --project=setup",
        "test:ae:guest": "playwright test --project=ae-guest --grep-invert @destructive",
        "test:ae:auth": "playwright test --project=ae-auth --grep-invert @destructive",
        "test:smoke:guest": "playwright test --project=ae-guest --grep @smoke",
        "test:smoke:auth": "playwright test --project=ae-auth --grep @smoke",
        "test:smoke": "playwright test --grep @smoke --grep-invert @destructive",
        "test:api": "playwright test --project=public-api",
        "test:ci": "playwright test --workers=1 --reporter=list",
        "test:headed": "playwright test --headed --grep-invert @destructive",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "report": "playwright show-report",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "test:visual": "npx playwright test --project=ae-guest --grep @visual",
        "test:visual:update": "npx playwright test --project=ae-guest --grep @visual --update-snapshots",
        "test:portfolio:ui": "npm run test:ae:guest",
        "test:portfolio:api": "npm run test:api"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.1",
        "@playwright/test": "^1.58.2",
        "@typescript-eslint/eslint-plugin": "^8.55.0",
        "@typescript-eslint/parser": "^8.55.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-define-config": "^2.1.0",
        "eslint-plugin-playwright": "^2.5.1",
        "eslint-plugin-prettier": "^5.5.5",
        "jiti": "^2.6.1",
        "playwright-smart-reporter": "^1.0.8",
        "prettier": "^3.8.1"
    },
    "dependencies": {
        "zod": "^3.25.76"
    }
}
